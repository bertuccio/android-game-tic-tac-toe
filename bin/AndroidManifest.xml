    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".account.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_title"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".account.SignInActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:icon="@android:color/transparent"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".mode.ModoLocalActivity"
            android:label="@string/title_activity_modo_local" >
        </activity>
        <activity
            android:name=".mode.ModoOnlineActivity"
            android:label="@string/title_activity_modo_online" >
        </activity>
        <activity
            android:name=".menu.MainMenuActivity"
            android:label="@string/title_activity_main_menu" >
        </activity>
        <activity
            android:name=".AyudaActivity"
            android:label="@string/title_activity_ayuda" >
        </activity>
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StatisticsActivity"
            android:label="@string/title_activity_statistics" >
        </activity>
    </application>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
